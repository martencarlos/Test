

<!-- Navbar -->

<nav class="navbar fixed-top navbar-light bg-light">
  <!-- Brand-->
  <a class="navbar-brand" id="brand" href="{{path.home}}">{{site.title}}</a>
  <!-- middle buttons -->
  <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
      <a class="nav-link" href="{{path.home}}">Home</a>
    </li>
  </ul>
  <!-- end of navbar -->
  <div class="my-2 my-sm-0" >
    {{#if user}}
    <button class="btn btn-outline-primary" type="button" onclick="window.location.href='{{path.home}}'">Dashboard</button>
    <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='{{path.logout}}'">logout</button>
    {{else}}
    <button class="btn btn-outline-primary" type="button" onclick="window.location.href='{{path.login}}'">Login</button>
    <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='{{path.register}}'">Register</button>
    {{/if}}
  </div>
