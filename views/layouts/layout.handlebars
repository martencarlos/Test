<!DOCTYPE html>
<html lang="en">
  
<!-- HEAD -->
<head>
  <title>WebFrame</title>

  <!-- Meta tags -->
  <meta charset="utf-8">
  <meta name="description" content="template">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> <!-- mobile-->

  <!-- CSS bootstrap(min), font awesome(min) -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="/public/css/theme.css" type="text/css">
</head>

<!-- BODY -->
<body>
  <!-- Navbar -->
  {{!-- <nav class="navbar navbar-light bg-light"> --}}
    <nav class="py-1">
      <div class="container shadow-sm">
        <div class="row">
          <div class="col-md-12">
            <ul class="nav nav-pills">
              <!-- Brand Name -->
              <li class="nav-item my-1" id="brand"><a class="nav-link" href="/">Webframe</a></li>
              <li class="nav-item mr-auto">
                <!-- Flexible space -->
              </li>
              <!-- Login/logout -->
              {{#if user}}
              <li class="nav-item rounded my-1">
                <a class="btn btn-outline-primary" href="/">Dashboard</a>
              </li>
              <li class="nav-item my-1" >
                <a class="nav-link" href="/users/logout">Logout</a>
              </li>
              {{else}}
              <li class="nav-item rounded my-1">
                <a class="btn btn-outline-primary" href="/users/login">Login</a>
              </li>
              <li class="nav-item my-1">
                <a class="nav-link" href="/users/register">Register</a>
              </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </div>
    </nav>
  {{!-- </nav> --}}

  <!-- Notifications -->
  <div class="row">
    <div class="col-lg-12">
      <div class="text-center">
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}} {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}
      </div>
    </div>
  </div>

  {{{body}}}

  <!-- FOOTER -->
  <footer class="footer">
    <div class="container">
      <span class="text-muted" style="align-center">&copy;
        <script>
          document.write(new Date().getFullYear())
        </script>
        WebFrame, Inc.
      </span>
    </div>
  </footer>
  
  <!-- SCRIPTS -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  
</body>

</html>